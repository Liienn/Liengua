<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <include
            android:id="@+id/collections_layout_top"
            layout="@layout/page_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/coming_soon_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Under construction"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>
    <TextView
        android:id="@+id/empty_collections_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is empty, let's add some collections!"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:visibility="gone"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ListView
        android:id="@+id/collections_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

        <Button
            android:id="@+id/add_collection_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border_solid_blue"
            android:textColor="@color/peach_200"
            android:text="Add a new collection" />
    </RelativeLayout>
</LinearLayout>


</LinearLayout>

